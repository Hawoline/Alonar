<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.MainActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/knife_0"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fire"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fire_flash"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/frost_ball"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mind"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/frost_spear"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/strength_of_mind"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/frost_shield"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pillar_of_fire"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/frost_ring"/>
    </LinearLayout>

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
    >
        <ImageView
                android:id="@+id/map_0_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="0"
                android:layout_column="0"/>
        <ImageView
                android:id="@+id/map_0_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="0"
                android:layout_column="1"/>
        <ImageView
                android:id="@+id/map_0_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_0_1"
                android:layout_row="0"
                android:layout_column="2"/>
        <ImageView
                android:id="@+id/map_0_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="0"
                android:layout_column="3"/>
        <ImageView
                android:id="@+id/map_0_4"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="0"
                android:layout_column="4"/>
        <ImageView
                android:id="@+id/map_1_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="1"
                android:layout_column="0"/>
        <ImageView
                android:id="@+id/map_1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="1"
                android:layout_column="1"/>
        <ImageView
                android:id="@+id/map_1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_0_1"
                android:layout_row="1"
                android:layout_column="2"/>
        <ImageView
                android:id="@+id/map_1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="1"
                android:layout_column="3"/>
        <ImageView
                android:id="@+id/map_1_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="1"
                android:layout_column="4"/>
        <ImageView
                android:id="@+id/map_2_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_0_0"
                android:layout_row="2"
                android:layout_column="0"/>
        <ImageView
                android:id="@+id/map_2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_0_0"
                android:layout_row="2"
                android:layout_column="1"/>
        <ImageView
                android:id="@+id/map_2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_0_2"
                android:layout_row="2"
                android:layout_column="2"/>
        <ImageView
                android:id="@+id/map_2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_0_0"
                android:layout_row="2"
                android:layout_column="3"/>
        <ImageView
                android:id="@+id/map_2_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_0_0"
                android:layout_row="2"
                android:layout_column="4"/>
        <ImageView
                android:id="@+id/map_3_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="3"
                android:layout_column="0"/>
        <ImageView
                android:id="@+id/map_3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="3"
                android:layout_column="1"/>
        <ImageView
                android:id="@+id/map_3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_0_1"
                android:layout_row="3"
                android:layout_column="2"/>
        <ImageView
                android:id="@+id/map_3_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="3"
                android:layout_column="3"/>
        <ImageView
                android:id="@+id/map_3_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="3"
                android:layout_column="4"/>
        <ImageView
                android:id="@+id/map_4_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="4"
                android:layout_column="0"/>
        <ImageView
                android:id="@+id/map_4_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="4"
                android:layout_column="1"/>
        <ImageView
                android:id="@+id/map_4_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_0_1"
                android:layout_row="4"
                android:layout_column="2"/>
        <ImageView
                android:id="@+id/map_4_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="4"
                android:layout_column="3"/>
        <ImageView
                android:id="@+id/map_4_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mountains"
                android:layout_row="4"
                android:layout_column="4"/>
    </GridLayout>
    <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
    />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Рюкз" />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="перс" />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="квест" />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="карта" />
    </LinearLayout>
</LinearLayout>